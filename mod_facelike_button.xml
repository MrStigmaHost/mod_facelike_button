<?xml version="1.1" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site">
    <name>FaceLike Button</name>
    <author>Xtnd.it L.T.D.</author>
    <creationDate>September 2012</creationDate>
    <copyright>Copyright (C) 2012 xtnd.it, All rights reserved.</copyright>
    <license>GNU General Public License</license>
    <authorEmail>info@xtnd.it</authorEmail>
    <authorUrl>http://www.xtnd.it/</authorUrl>
    <version>1.0</version>
    <description>You want to share your Joomla site content ? Use that plugin to allow your visitors share your content among their friends !</description>
    <files>
        <filename module="mod_facelike_button">mod_facelike_button.php</filename>
		<filename>mod_facelike_button.xml</filename>
        <filename>index.html</filename>
        <filename>language/bg-BG/bg-BG.mod_facelike_button.ini</filename>
        <filename>language/cs-CZ/cs-CZ.mod_facelike_button.ini</filename>
        <filename>language/da-DK/da-DK.mod_facelike_button.ini</filename>
        <filename>language/el-GR/el-GR.mod_facelike_button.ini</filename>
        <filename>language/en-GB/en-GB.mod_facelike_button.ini</filename>
        <filename>language/fr-FR/fr-FR.mod_facelike_button.ini</filename>
        <filename>language/it-IT/it-IT.mod_facelike_button.ini</filename>
        <filename>language/zh-CN/zh-CN.mod_facelike_button.ini</filename>
    </files>
	<config>
    	<fields name="params">
    		<fieldset name="basic">
                <field name="fb_appid" size="50" type="text" label="MOD_FACELIKE_BTN_APP_ID" description="MOD_FACELIKE_BTN_APP_ID_DESC" />
        		<field name="fb_send" type="radio" label="MOD_FACELIKE_BTN_SEND" default="0" description="MOD_FACELIKE_BTN_SEND_DESC" >
        			<option value="1">MOD_FACELIKE_BTN_YES</option>
        			<option value="0">MOD_FACELIKE_BTN_NO</option>
        		</field>
                <field name="fb_layout" type="list" label="MOD_FACELIKE_BTN_LAYOUT" default="standard" description="MOD_FACELIKE_BTN_LAYOUT_DESC">
                    <option value="standard">MOD_FACELIKE_BTN_STD</option>
                    <option value="button_count">MOD_FACELIKE_BTN_CNT</option>
                    <option value="box_count">MOD_FACELIKE_BTN_BOX</option>
                </field>
        		<field name="fb_width" type="text" label="MOD_FACELIKE_BTN_WIDTH" default="450" description="MOD_FACELIKE_BTN_WIDTH_DESC" />
                <field name="fb_faces" type="radio" label="MOD_FACELIKE_BTN_FACES" default="1" description="MOD_FACELIKE_BTN_FACES_DESC" >
        			<option value="1">MOD_FACELIKE_BTN_SHOW</option>
        			<option value="0">MOD_FACELIKE_BTN_HIDE</option>
        		</field>
                <field name="fb_verb" type="list" label="MOD_FACELIKE_BTN_VERB" default="standard" description="MOD_FACELIKE_BTN_VERB_DESC">
                    <option value="like">MOD_FACELIKE_BTN_LIKE</option>
                    <option value="recommend">MOD_FACELIKE_BTN_RECOMMEND</option>
                </field>
                <field name="fb_color" type="list" label="MOD_FACELIKE_BTN_COLOR" description="MOD_FACELIKE_BTN_COLOR_DESC" >
        			<option value="light">MOD_FACELIKE_BTN_COLOR_LIGHT</option>
        			<option value="dark">MOD_FACELIKE_BTN_COLOR_DARK</option>
        		</field>
        		<field name="fb_font" type="list" label="MOD_FACELIKE_BTN_FONT" description="MOD_FACELIKE_BTN_FONT_DESC" >
                    <option value="default">MOD_FACELIKE_BTN_DEFAULT</option>
        			<option value="arial">MOD_FACELIKE_BTN_ARIAL</option>
        			<option value="lucida grande">MOD_FACELIKE_BTN_LUCIDA</option>
                    <option value="segoe ui">MOD_FACELIKE_BTN_SEGOE</option>
                    <option value="tahoma">MOD_FACELIKE_BTN_TAHOMA</option>
                    <option value="trebuchet ms">MOD_FACELIKE_BTN_TREBUCHET</option>
                    <option value="verdana">MOD_FACELIKE_BTN_VERDANA</option>
        		</field>
                <field name="fb_doc_version" type="list" label="MOD_FACELIKE_BTN_DOCTYPE" default="HTML5" description="MOD_FACELIKE_BTN_DOCTYPE_DESC">
                    <option value="HTML5">MOD_FACELIKE_BTN_DOCTYPE_HTML5</option>
                    <option value="Other">MOD_FACELIKE_BTN_DOCTYPE_OTHER</option>
                </field>
    		</fieldset>
    	</fields>
	</config>
    <administration>
        <languages folder="language">
            <language tag="en-GB">en-GB/en-GB.mod_facelike_button.ini</language>
            <language tag="el-GR">el-GR/el-GR.mod_facelike_button.ini</language>
            <language tag="it-IT">it-IT/it-IT.mod_facelike_button.ini</language>
            <language tag="bg-BG">bg-BG/bg-BG.mod_facelike_button.ini</language>
            <language tag="zh-CN">zh-CN/zh-CN.mod_facelike_button.ini</language>
            <language tag="cs-CZ">cs-CZ/cs-CZ.mod_facelike_button.ini</language>
            <language tag="da-DK">da-DK/da-DK.mod_facelike_button.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.mod_facelike_button.ini</language>
        </languages>
    </administration>
</extension>